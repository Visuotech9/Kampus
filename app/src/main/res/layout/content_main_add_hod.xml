            android:layout_height="40dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:weightSum="1"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight=".25"
