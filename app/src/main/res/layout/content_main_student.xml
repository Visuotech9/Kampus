<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/registration_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:orientation="vertical" >

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/colorPrimary2222"
        android:layout_height="wrap_content">


        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/iv_profile"
            android:layout_width="90dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/img_logo_full"
            android:layout_height="90dp"
            android:layout_centerInParent="true"
            app:civ_border_color="@color/lightgrey"
            app:civ_border_width="1dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/lay_full_prof"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:textSize="18dp"
                android:text="Stuti Tripathi"
                android:textColor="@color/White"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                 />

            <TextView
                android:id="@+id/tv_branch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/Wheat"
                android:text="Information and technology"
                android:layout_marginTop="3dp"/>

            <TextView
                android:id="@+id/tv_sem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/Wheat"
                android:text="3rd semister"
                android:layout_marginTop="3dp"/>

            <LinearLayout
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/tv_attendence"
                    android:hint="75%"
                    android:layout_weight=".5"
                    android:paddingLeft="10dp"
                    android:textSize="20dp"
                    android:textColor="@color/Green"
                    android:paddingBottom="5dp"
                    android:gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/tv_full_profile"
                    android:text="Full profile"
                    android:paddingLeft="40dp"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimary"
                    android:layout_weight=".5"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:drawableRight="@drawable/open_right"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />



            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:background="@color/colorPrimarylight"
        android:orientation="vertical">





        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_height="120dp">

            <LinearLayout
                android:layout_width="0dp"
                android:id="@+id/lay1"
                android:paddingTop="10dp"
                android:layout_weight=".33"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                tools:ignore="Suspicious0dp">

                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:gravity="center_horizontal"
                    android:background="@drawable/bg_circular_imageview"
                    android:layout_gravity="center_horizontal">

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:layout_width="55dp"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_marginTop="2.5dp"
                        android:layout_height="55dp"
                        android:src="@drawable/attendence_icon"
                        app:civ_border_color="@color/Gray"
                        app:civ_border_width="0dp"
                        app:civ_shadow="true"
                        app:civ_shadow_radius="0"
                        app:civ_shadow_color="@color/colorPrimary"/>

                </LinearLayout>



                <TextView
                    android:layout_width="match_parent"
                    android:text="Attendence"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/Black"
                    android:textSize="15dp"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content" />




            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:id="@+id/lay2"
                android:paddingTop="10dp"
                android:layout_weight=".33"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                tools:ignore="Suspicious0dp">

                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:gravity="center_horizontal"
                    android:background="@drawable/bg_circular_imageview"
                    android:layout_gravity="center_horizontal">

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:layout_width="55dp"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_marginTop="2.5dp"
                        android:layout_height="55dp"
                        android:src="@drawable/fee_icon"
                        app:civ_border_color="@color/Gray"
                        app:civ_border_width="0dp"
                        app:civ_shadow="true"
                        app:civ_shadow_radius="0"
                        app:civ_shadow_color="@color/colorPrimary"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:text="Fee structure"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/Black"
                    android:textSize="15dp"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content" />





            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:id="@+id/lay3"
                android:paddingTop="10dp"
                android:layout_weight=".33"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                tools:ignore="Suspicious0dp">

                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:gravity="center_horizontal"
                    android:background="@drawable/bg_circular_imageview"
                    android:layout_gravity="center_horizontal">

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:layout_width="55dp"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_marginTop="2.5dp"
                        android:layout_height="55dp"
                        android:src="@drawable/timetable_icon"
                        app:civ_border_color="@color/Gray"
                        app:civ_border_width="0dp"
                        app:civ_shadow="true"
                        app:civ_shadow_radius="0"
                        app:civ_shadow_color="@color/colorPrimary"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:text="Time table"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/Black"
                    android:textSize="15dp"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content" />





            </LinearLayout>





        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_height="120dp">

            <LinearLayout
                android:layout_width="0dp"
                android:id="@+id/lay4"
                android:paddingTop="10dp"
                android:layout_weight=".33"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                tools:ignore="Suspicious0dp">

                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:gravity="center_horizontal"
                    android:background="@drawable/bg_circular_imageview"
                    android:layout_gravity="center_horizontal">

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:layout_width="55dp"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_marginTop="2.5dp"
                        android:layout_height="55dp"
                        android:src="@drawable/communication_icon"
                        app:civ_border_color="@color/Gray"
                        app:civ_border_width="0dp"
                        app:civ_shadow="true"
                        app:civ_shadow_radius="0"
                        app:civ_shadow_color="@color/colorPrimary"/>

                </LinearLayout>



                <TextView
                    android:layout_width="match_parent"
                    android:text="Notifications"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/Black"
                    android:textSize="15dp"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content" />




            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:id="@+id/lay5"
                android:paddingTop="10dp"
                android:layout_weight=".33"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                tools:ignore="Suspicious0dp">

                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:gravity="center_horizontal"
                    android:background="@drawable/bg_circular_imageview"
                    android:layout_gravity="center_horizontal">

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:layout_width="55dp"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_marginTop="2.5dp"
                        android:layout_height="55dp"
                        android:src="@drawable/assignment_icon"
                        app:civ_border_color="@color/Gray"
                        app:civ_border_width="0dp"
                        app:civ_shadow="true"
                        app:civ_shadow_radius="0"
                        app:civ_shadow_color="@color/colorPrimary"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:text="Assignments"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/Black"
                    android:textSize="15dp"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content" />





            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:id="@+id/lay6"
                android:paddingTop="10dp"
                android:layout_weight=".33"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                tools:ignore="Suspicious0dp">

                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:gravity="center_horizontal"
                    android:background="@drawable/bg_circular_imageview"
                    android:layout_gravity="center_horizontal">

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:layout_width="55dp"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_marginTop="2.5dp"
                        android:layout_height="55dp"
                        android:src="@drawable/study_icon"
                        app:civ_border_color="@color/Gray"
                        app:civ_border_width="0dp"
                        app:civ_shadow="true"
                        app:civ_shadow_radius="0"
                        app:civ_shadow_color="@color/colorPrimary"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:text="Study materials"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/Black"
                    android:textSize="15dp"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content" />





            </LinearLayout>





        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_height="120dp">

            <LinearLayout
                android:layout_width="0dp"
                android:id="@+id/lay7"
                android:paddingTop="10dp"
                android:layout_weight=".33"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                tools:ignore="Suspicious0dp">

                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:gravity="center_horizontal"
                    android:background="@drawable/bg_circular_imageview"
                    android:layout_gravity="center_horizontal">

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:layout_width="55dp"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_marginTop="2.5dp"
                        android:layout_height="55dp"
                        android:src="@drawable/result_icon"
                        app:civ_border_color="@color/Gray"
                        app:civ_border_width="0dp"
                        app:civ_shadow="true"
                        app:civ_shadow_radius="0"
                        app:civ_shadow_color="@color/colorPrimary"/>

                </LinearLayout>



                <TextView
                    android:layout_width="match_parent"
                    android:text="Results"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/Black"
                    android:textSize="15dp"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content" />




            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:id="@+id/lay8"
                android:paddingTop="10dp"
                android:layout_weight=".33"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                tools:ignore="Suspicious0dp">

                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:gravity="center_horizontal"
                    android:background="@drawable/bg_circular_imageview"
                    android:layout_gravity="center_horizontal">

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:layout_width="55dp"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_marginTop="2.5dp"
                        android:layout_height="55dp"
                        android:src="@drawable/event_icon"
                        app:civ_border_color="@color/Gray"
                        app:civ_border_width="0dp"
                        app:civ_shadow="true"
                        app:civ_shadow_radius="0"
                        app:civ_shadow_color="@color/colorPrimary"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:text="Events"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/Black"
                    android:textSize="15dp"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content" />





            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:id="@+id/lay9"
                android:paddingTop="10dp"
                android:layout_weight=".33"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                tools:ignore="Suspicious0dp">

                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:gravity="center_horizontal"
                    android:background="@drawable/bg_circular_imageview"
                    android:layout_gravity="center_horizontal">

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:layout_width="55dp"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_marginTop="2.5dp"
                        android:layout_height="55dp"
                        android:src="@drawable/communication_icon"
                        app:civ_border_color="@color/Gray"
                        app:civ_border_width="0dp"
                        app:civ_shadow="true"
                        app:civ_shadow_radius="0"
                        app:civ_shadow_color="@color/colorPrimary"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:text="Send notification"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/Black"
                    android:textSize="15dp"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content" />





            </LinearLayout>





        </LinearLayout>

    </LinearLayout>








</LinearLayout>
</ScrollView>